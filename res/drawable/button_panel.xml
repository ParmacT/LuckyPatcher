<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#ff000000" android:endColor="#ff000000" android:angle="90.0" android:centerColor="#ffaaaaaa" />
            <stroke android:width="1.0px" android:color="#ff000000" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="#ff000000" android:endColor="#ff000000" android:angle="90.0" android:centerColor="#ffaaaaaa" />
            <stroke android:width="1.0px" android:color="#ff000000" />
            <padding android:left="10.0dip" android:top="10.0dip" android:right="10.0dip" android:bottom="10.0dip" />
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:left="0.0px" android:top="0.0px" android:right="0.0px" android:bottom="0.0px">
                <shape>
                    <gradient android:startColor="#ff000000" android:endColor="#ff000000" android:angle="90.0" android:centerColor="#ff222222" />
                    <stroke android:width="1.0px" android:color="#ff000000" />
                </shape>
            </item>
            <item android:left="1.0px" android:top="20.0dip" android:right="1.0px" android:bottom="0.0px">
                <shape>
                    <gradient android:startColor="#30bfab54" android:endColor="#00000000" android:angle="90.0" android:centerColor="#00bfab54" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>